<div class="container" style="margin-top: 60px">
	<div class="row">
		<div class="row">
			<div class="col-md-3"  style="margin-top:40px">
				Logo
			</div>

			<div class="col-md-9" style="margin-top:40px">
				<center>
					<h3>仪器维护</h3>
				</center>
			</div>

		</div>

	</div>

	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "maintainer/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">

			<table class="table table-hover">
				<thead>
					<tr>
						<th>仪器名称</th>
						<th>型号</th>
						<th>使用计费（元/小时）</th>
						<th>状态</th>
						<th>所属单位</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @maintainer_instruments.each do |maintainer_instrument| %>
					<tr>
						<td><%= maintainer_instrument.name %></td>
						<td><%= maintainer_instrument.model %></td>
						<td><%= maintainer_instrument.fee_per_hour %></td>
						<td><%= maintainer_instrument.status %></td>
						<td><%= maintainer_instrument.institution_id %></td>
						<td><%= link_to '详情', maintainer_instrument_path(maintainer_instrument) %></td>
						<td><%= link_to '编辑', edit_maintainer_instrument_path(maintainer_instrument) %></td>
						<td><%= link_to '删除', maintainer_instrument_path(maintainer_instrument), method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<br>
		<div class="row pull-right">
			<%= link_to '发布新仪器', new_maintainer_instrument_path %>
		</div>
	</div>
</div>
