<div class="container" style="margin-top: 60px">

	<div class="row">
		<div class="col-md-3"  style="margin-top:40px">
			Logo
		</div>

		<div class="col-md-9" style="margin-top:40px">
			<center>
				<h3>仪器详情</h3>
			</center>
		</div>
	</div>

	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "maintainer/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">
			<h1> <%= notice %> </h1>
			<div class="row">
				<div class="col-md-offset-1 col-md-3">
					<center>
						<%= image_tag(@maintainer_instrument.img_url)%>
					</center>
				</div>
			</div>

			<table class="table table-striped">
				<thead>
					<tr>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>

					<tr>
						<td>仪器名称</td><td><%= @maintainer_instrument.name %></td>
					</tr>
					<tr>
						<td>型号</td><td> <%= @maintainer_instrument.model %></td>
					</tr>
					<tr>
						<td>价格</td><td> <%= @maintainer_instrument.price %></td>
					</tr>
					<tr>
						<td>使用计费（元/小时）</td><td> <%= @maintainer_instrument.fee_per_hour %></td>
					</tr>
					<tr>
						<td>描述</td><td> <%= @maintainer_instrument.description %></td>
					</tr>
					<tr>
						<td>状态</td><td> <%= @maintainer_instrument.status %></td>
					</tr>
					<tr>
						<td>负责人</td><td> <%= @maintainer_instrument.user_id %></td>
					</tr>
					<tr>
						<td>所属单位</td><td> <%= @maintainer_instrument.institution_id %></td>
					</tr>
				</tbody>
			</table>
			<div class="row pull-right">
				<%= link_to '编辑', edit_maintainer_instrument_path(@maintainer_instrument) %> |
				<%= link_to '返回', maintainer_instruments_path %>
			</div>
		</div>
	</div>
</div>