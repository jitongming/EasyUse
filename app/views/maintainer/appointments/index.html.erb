<h1>Listing maintainer_appointments</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Price paid</th>
      <th>Fee</th>
      <th>Submit time</th>
      <th>Status</th>
      <th>User</th>
      <th>Group</th>
      <th>Instrument</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maintainer_appointments.each do |maintainer_appointment| %>
      <tr>
        <td><%= maintainer_appointment.date %></td>
        <td><%= maintainer_appointment.time %></td>
        <td><%= maintainer_appointment.price_paid %></td>
        <td><%= maintainer_appointment.fee %></td>
        <td><%= maintainer_appointment.submit_time %></td>
        <td><%= maintainer_appointment.status %></td>
        <td><%= maintainer_appointment.user_id %></td>
        <td><%= maintainer_appointment.group_id %></td>
        <td><%= maintainer_appointment.instrument_id %></td>
        <td><%= link_to 'Show', maintainer_appointment_path(maintainer_appointment) %></td>
        <td><%= link_to 'Edit', edit_maintainer_appointment_path(maintainer_appointment) %></td>
        <td><%= link_to 'Destroy', maintainer_appointment_path(maintainer_appointment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

