<div class="container" style="margin-top: 60px">
	<div class="row">
		<div class="row">
			<div class="col-md-3"  style="margin-top:40px">
				Logo
			</div>

			<div class="col-md-9" style="margin-top:40px">
				<center>
					<h3>预约审核</h3>
				</center>
			</div>

		</div>

	</div>

	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "maintainer/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">

			<table class="table table-hover">
				<thead>
					<tr>
						<th>预约日期</th>
						<th>预约时间</th>
						<th>付款状态</th>
						<th>总费用</th>
						<th>申请时间</th>
						<th>审核状态</th>
						<th>申请人</th>
						<th>预约仪器</th>
						<th colspan="2"></th>
					</tr>
				</thead>

				<tbody>
					<% @maintainer_appointments.each do |maintainer_appointment| %>
				<tr>
						<td><%= maintainer_appointment.date %></td>
						<td><%= maintainer_appointment.time %></td>
						<td><%= maintainer_appointment.price_paid %></td>
						<td><%= maintainer_appointment.fee %></td>
						<td><%= maintainer_appointment.submit_time.to_s[0,10] %></td>
						<td><%= maintainer_appointment.status %></td>
						<td><%= maintainer_appointment.user_id %></td>
						<td><%= maintainer_appointment.instrument_id %></td>
						<td><%= link_to '详情', maintainer_appointment_path(maintainer_appointment) %></td>
						<td><a href=<%= '/maintainer/appointments/'+maintainer_appointment.id.to_s+'/check'%>>审核通过</a></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>
