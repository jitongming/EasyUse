<div class="container" style="margin-top: 60px">

	<div class="row" style="margin-top:40px">
		<div class="col-md-3"  >
			Logo
		</div>

		<div class="col-md-9" >
			<center>
				<h3>登录</h3>
			</center>
		</div>

	</div>

	<div class="row" style="margin-top: 60px">
		<%= form_for :login,url: validates_welcome_index_path,:html=>{:class=>"form-horizontal"}  do |f| %>
		<div class="form-group field">
			<%= f.label :邮件地址,:class=>'col-sm-2 col-md-offset-3 control-label ' %>
			<div class="col-sm-3">
				<%= f.email_field :email,:class=>'form-control' %>
			</div>
		</div>

		<div class="form-group field">
			<%= f.label :密码,:class=>'col-sm-2 col-md-offset-3 control-label' %>
			<div class="col-sm-3">
				<%= f.password_field :password,:class=>'form-control' %>
			</div>
		</div>
		<div class="form-group actions">
		<center>
			<%= f.submit '登录',:class=>"btn btn-info"%></center>

		</div>
		<% end %>
	</div>

</div>