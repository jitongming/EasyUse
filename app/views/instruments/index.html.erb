<h1>Listing instruments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Model</th>
      <th>Price</th>
      <th>Img url</th>
      <th>Status</th>
      <th>Description</th>
      <th>Availibility</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instruments.each do |instrument| %>
      <tr>
        <td><%= instrument.name %></td>
        <td><%= instrument.model %></td>
        <td><%= instrument.price %></td>
        <td><%= instrument.img_url %></td>
        <td><%= instrument.status %></td>
        <td><%= instrument.description %></td>
        <td><%= instrument.availibility %></td>
        <td><%= link_to 'Show', instrument %></td>
        <td><%= link_to 'Edit', edit_instrument_path(instrument) %></td>
        <td><%= link_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

