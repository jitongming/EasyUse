<div class="container" style="margin-top:60px">
	<div class="row">
		<center>
			<h2> 刷卡登录模拟 </h2>
		</center>
	</div>
	<hr>
	<div class="row">
		<%= form_for :login, url: terminal_validates_path , :html=>{:class=>"form-horizontal"} do |f| %>

		<div class="form-group field row">
			<%= f.label :email,:class=>'col-sm-2  col-md-offset-2 control-label' %>
			<div class="col-sm-4">
				<%= f.email_field :email,:class=>'form-control'  %>
			</div>
		</div >
		<style>
		.btn-lg{line-height: 10}
		</style>
		<div class="row">
			<div class="col-sm-3"></div>
			<div class="col-sm-6 form-group actions  ">
				<%= f.submit '刷卡区',:class=>" btn btn-primary btn-lg   btn-block"%>
			</div >
		</div>

		<!--div class="row">
			<%= image_tag("card.jpg")%>
		</div-->
		<% end %>
	</div>
</div>