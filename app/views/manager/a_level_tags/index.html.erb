<div class="container" style="margin-top: 60px">
	<div class="row">
		<div class="row">
			<div class="col-md-3"  style="margin-top:40px">
				Logo
			</div>

			<div class="col-md-9" style="margin-top:40px">
				<center>
					<h3>一级标签管理</h3>
				</center>
			</div>

		</div>

	</div>

	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "manager/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">

			<table class="table table-hover">
				<thead>
					<tr>
						<th>一级标签名</th>
						<th>标签描述</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @manager_a_level_tags.each do |manager_a_level_tag| %>
					<tr>
						<td><%= manager_a_level_tag.name %></td>
						<td><%= manager_a_level_tag.description %></td>
						<td><%= link_to '详情', manager_a_level_tag_path(manager_a_level_tag) %></td>
						<td><%= link_to '编辑', edit_manager_a_level_tag_path(manager_a_level_tag) %></td>
						<td><%= link_to '删除', manager_a_level_tag_path(manager_a_level_tag), method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<br>
		<div class="row pull-right">
			<%= link_to '创建一级标签', new_manager_a_level_tag_path %>
		</div>
	</div>
</div>