<%= form_for [:manager, @manager_institution] do |f| %>
<% if @manager_institution.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@manager_institution.errors.count, "error") %> prohibited this manager_institution from being saved:</h2>

	<ul>
		<% @manager_institution.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group field">
	<%= f.label :单位名称,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.text_field :name,:class=>'form-control' %>
	</div>
</div>
<div class="form-group field">
	<%= f.label :单位描述,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.text_area :description,:class=>'form-control' %>
	</div>
</div>
<div class="form-group field">
	<%= f.label :单位网址,:class=>'col-sm-2 control-label' %>
	<div class="col-sm-10">
		<%= f.text_field :url,:class=>'form-control' %>
	</div>
</div>
<div class="form-group field">
	<%= f.label :所属区域中心,:class=>'col-sm-2 control-label'  %>
	<div class="pull-left col-md-3">
		<%= collection_select(:region_center,:region_center_id, @region_centers, :id, :name, options ={:prompt => "请选择区域中心"},:class=>'form-control')%>
	</div>
</div>
<div class="form-group field actions">
	<div class="pull-right">
		<%= f.submit '提交',:class=>"btn btn-default"%>
	</div>
</div>
<% end %>
