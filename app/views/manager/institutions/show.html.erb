<div class="container" style="margin-top: 60px">

	<div class="row">
		<div class="col-md-3"  style="margin-top:40px">
			Logo
		</div>

		<div class="col-md-9" style="margin-top:40px">
			<center>
				<h3>单位详情</h3>
			</center>
		</div>
	</div>

	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "manager/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">
			<!--<h1> <%= notice %> </h1>-->

			<table class="table table-striped">
				<thead>
					<tr>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>单位名称</td><td><%= @manager_institution.name %></td>
					</tr>

					<tr>
						<td>单位描述</td><td><%= @manager_institution.description %></td>
					</tr>

					<tr>
						<td>单位网址</td><td><%= @manager_institution.url %></td>
					</tr>

					<tr>
						<td>所属区域中心</td><td><%= @manager_institution.region_center_id %></td>
					</tr>
				</tbody>
			</table>
			<div class="row pull-right">

				<%= link_to '编辑', edit_manager_institution_path(@manager_institution) %> |
				<%= link_to '返回', manager_institutions_path %>
			</div>
		</div>
	</div>
</div>