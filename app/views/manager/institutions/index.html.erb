<div class="container" style="margin-top: 60px">
	<div class="row">
		<div class="row">
			<div class="col-md-3"  style="margin-top:40px">
				Logo
			</div>

			<div class="col-md-9" style="margin-top:40px">
				<center>
					<h3>单位管理</h3>
				</center>
			</div>

		</div>

	</div>

	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "manager/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">

			<table class="table table-hover">
				<thead>
					<tr>
						<th>单位名称</th>
						<th>单位网址</th>
						<th>所属区域中心</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @manager_institutions.each do |manager_institution| %>
					<tr>
						<td><%= manager_institution.name %></td>
						<td><%= manager_institution.url %></td>
						<td>
						<% @region_centers.each do |region_center| %>
						<% if region_center.id==manager_institution.region_center_id%>
						<%= region_center.name%>
						<%end%>
						<% end %>
						</td>
						<td><%= link_to '详情', manager_institution_path(manager_institution) %></td>
						<td><%= link_to '编辑', edit_manager_institution_path(manager_institution) %></td>
						<td><%= link_to '删除', manager_institution_path(manager_institution), method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<br>
		<div class="row pull-right">
			<%= link_to '新增单位', new_manager_institution_path %>
		</div>
	</div>
</div>