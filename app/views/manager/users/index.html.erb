<div class="container" style="margin-top: 60px">
	<div class="row">
		<div class="row">
			<div class="col-md-3"  style="margin-top:40px">
				Logo
			</div>

			<div class="col-md-9" style="margin-top:40px">
				<center>
					<h3>用户管理</h3>
				</center>
			</div>

		</div>

	</div>

	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "manager/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">

			<table class="table table-hover">
				<thead>
					<tr>
						<th>工号</th>
						<th>姓名</th>
						<th>Email</th>
						<th>单位</th>
						<th>状态</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @manager_users.each do |manager_user| %>
					<tr>
						<td><%= manager_user.card_number %></td>
						<td><%= manager_user.name %></td>
						<td><%= manager_user.email %></td>
						<td><%= manager_user.institution_id %></td>
						<td><%= manager_user.status %></td>
						<td><%= link_to '详情', manager_user_path(manager_user)  %></td>
						<td><%= link_to '编辑', edit_manager_user_path(manager_user) %></td>
						<td><%= link_to '删除', manager_user_path(manager_user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<br>
	</div>
</div>