<div class="container" style="margin-top: 60px">

	<div class="row">
		<div class="col-md-3"  style="margin-top:40px">
			Logo
		</div>

		<div class="col-md-9" style="margin-top:40px">
			<center>
				<h3>用户详情</h3>
			</center>
		</div>
	</div>

	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "manager/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">
			<!--<h1> <%= notice %> </h1>-->

			<table class="table table-striped">
				<thead>
					<tr>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>工号</td><td> <%= @manager_user.card_number %></td>
					</tr>
					<tr>
						<td>姓名</td><td> <%= @manager_user.name %></td>
					</tr>
					<tr>
						<td>密码</td><td> <%= @manager_user.password %></td>
					</tr>
					<tr>
						<td>性别</td><td> <%= @manager_user.sex %></td>
					</tr>
					<tr>
						<td>身份证号</td><td> <%= @manager_user.id_number %></td>
					</tr>
					<tr>
						<td>手机号码</td><td> <%= @manager_user.phone %></td>
					</tr>
					<tr>
						<td>照片</td><td> <%= @manager_user.picture %></td>
					</tr>
					<tr>
						<td>Email</td><td> <%= @manager_user.email %></td>
					</tr>
					<tr>
						<td>联系地址</td><td> <%= @manager_user.address %></td>
					</tr>
					<tr>
						<td>状态</td><td> <%= @manager_user.status %></td>
					</tr>
					<tr>
						<td>单位</td><td> <%= @manager_user.institution_id %></td>
					</tr>
					<tr>
						<td>角色</td><td> <%= Role.find(@manager_user.role_id).name %></td>
					</tr>

				</tbody>
			</table>
			<div class="row pull-right">

				<%= link_to '编辑', edit_manager_user_path(@manager_user) %> |
				<%= link_to '返回', manager_users_path %>
			</div>
		</div>
	</div>
</div>