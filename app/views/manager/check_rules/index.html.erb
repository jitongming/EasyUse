
<div class="container" style="margin-top: 60px">
<div class="row">
	<div class="row">
		<div class="col-md-3"  style="margin-top:40px">
			Logo
		</div>

		<div class="col-md-9" style="margin-top:40px">
			<center><h3>审核规则</h3></center>
		</div>

	</div>

</div>

	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "manager/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">



			
<table class="table table-hover">
  <thead>
    <tr>
      <th>规则名</th>
      <th>规则描述</th>
      <th>是否启用</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	
  	 <% @manager_check_rules.each do |manager_check_rule| %>
      <tr>
        <td><%= manager_check_rule.name %></td>
        <td><%= manager_check_rule.description %></td>
        <td><%if manager_check_rule.applid %>是<%else%>否<%end%></td>
        <td>
        	
        	<%if !manager_check_rule.applid then %> <a href=<%='/manager/check_rules/'+manager_check_rule.id.to_s+'/enable'%>> 启用</a>
        	<%else%><a href=<%='/manager/check_rules/'+manager_check_rule.id.to_s+'/disable'%>>禁用</a><%end%>
   </a>
      
        </td>
        <td><%= link_to '详情', manager_check_rule_path(manager_check_rule) %></td>
        <td><%= link_to '编辑', edit_manager_check_rule_path(manager_check_rule) %></td>
        <td><%= link_to '删除', manager_check_rule_path(manager_check_rule), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>

  </tbody>
</table>

		</div>
	
	
	
	
	<div class="row pull-right">
		
	<%= link_to '新建审核规则', new_manager_check_rule_path %>	
	
	</div>
	
	</div>









</div>
