<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Card number</th>
      <th>Name</th>
      <th>Password</th>
      <th>Sex</th>
      <th>Id number</th>
      <th>Phone</th>
      <th>Picture</th>
      <th>Email</th>
      <th>Address</th>
      <th>Login number</th>
      <th>Last login time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.card_number %></td>
        <td><%= user.name %></td>
        <td><%= user.password %></td>
        <td><%= user.sex %></td>
        <td><%= user.id_number %></td>
        <td><%= user.phone %></td>
        <td><%= user.picture %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.login_number %></td>
        <td><%= user.last_login_time %></td>
        <td><%= user.status %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

