

<div class="container" style="margin-top: 60px">
<div class="row">
	<div class="row">
		<div class="col-md-3"  style="margin-top:40px">
			Logo
		</div>

		<div class="col-md-9" style="margin-top:40px">
			<center><h3>预约管理</h3></center>
		</div>

	</div>

</div>
	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "customer/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">

			<table class="table table-hover">

				<thead>
					<tr>
						<th>开始时间</th>
						<th>结束时间</th>
						<th>支付状态</th>
						<th>费用</th>
						<th>提交时间</th>
						<th>申请状态</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @appointments.each do |appointment| %>
					<tr>
						<td><%= appointment.start_time %></td>
						<td><%= appointment.end_time %></td>
						<td><%= appointment.price_paid %></td>
						<td><%= appointment.fee %></td>
						<td><%= appointment.submit_time %></td>
						<td><%= appointment.status %></td>
						<td><%= link_to '详情', appointment %></td>
						<td><%= link_to '编辑', edit_appointment_path(appointment) %></td>
						<td><%= link_to '删除', appointment, method: :delete, data: { confirm: '确定删除?' } %></td>
					</tr>
					<% end %>
				</tbody>

			</table>

		</div>
	</div>

	<!--%= link_to 'New Appointment', new_appointment_path%-->
</div>


