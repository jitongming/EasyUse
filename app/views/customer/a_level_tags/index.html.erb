<h1>Listing a_level_tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @a_level_tags.each do |a_level_tag| %>
      <tr>
        <td><%= a_level_tag.name %></td>
        <td><%= a_level_tag.description %></td>
        <td><%= link_to 'Show', a_level_tag %></td>
        <td><%= link_to 'Edit', edit_a_level_tag_path(a_level_tag) %></td>
        <td><%= link_to 'Destroy', a_level_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

