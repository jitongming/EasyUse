

<div class="container" style="margin-top: 60px">
<div class="row">
	<div class="row">
		<div class="col-md-3"  style="margin-top:40px">
			Logo
		</div>

		<div class="col-md-9" style="margin-top:40px">
			<center><h3>我的消息</h3></center>
		</div>

	</div>

</div>

<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "customer/common/sidebar"%>
		</div>


	<div class="col-md-10" style="padding:20px">

<table class="table table-hover">
  <thead>
    <tr>
      <th>消息发送者</th>
      <th>内容</th>
      <th>发送时间</th>
      <th colspan="3"></th><!--th colspan="3"></th-->
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.from %></td>
        <td><%= message.content %></td>
        <td><%= message.send_time %></td>
        <td><%= link_to '详情', message %></td>
        <!--td><%= link_to '编辑', edit_message_path(message) %></td-->
        <td><%= link_to '删除', message, method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

	<!--div class="row pull-right">
<%= link_to '新建消息', new_message_path %>
</div-->

</div>



